html, body {
  border-right: 0px !important;
}
body {
  font-size: $fsize;
  color: $fgcolor;
  font-family: $font_family;
  background-color: $bgcolor;
  margin: 0px;
  margin-top: 0px;
  margin-left: 0px;
  margin-right: 0px;
  padding: 0px;
}
table {
  border-collapse: collapse;
  empty-cells: show;
}
tr, td {
  font-size: $fsize;
  color: $fgcolor;
  font-family: $font_family;
  vertical-align: top;
  empty-cells: show;
  border-collapse: collapse;
}
pre {
  font-family: $font_family;
}
a, a:visited {
  color: $fgcolor;
  background: transparent;
  font-size: $fsize;
  text-decoration: $underline; 
}
a:hover {
  color: $link_hover !important;
  background: transparent;
  text-decoration: underline !important;
}
.buttons {
  color: $label_fgcolor;
  background: $label_bgcolor;
  border: 1px solid $border_color;
  width: 98%;
}
.iconbar {
  text-align: right;
  color: $data_fgcolor;
  background: $data_bgcolor;
  border: 1px solid $border_color;
  width: 99%;
  margin-bottom: 4px;
  padding: 2px;
}
img {
  vertical-align: middle;
}
.fixed {
  font-family: courier;
}
.header, .header a, .header a:visited {
  vertical-align: middle;
  background-color: black;
  color: white;
  padding: 2px;
}
.crumb {
  font-weight: bold;
  font-size: $fsize;
  color: $subtitle_fgcolor;
  background: $subtitle_bgcolor;
  padding: 2px;
  margin: 2px;
  vertical-align: middle;
  border-top: 1px solid $border_color;
  border-bottom: 1px solid $border_color;
}
.crumb a, .crumb a:visited {
  font-weight: bold;
  font-size: $fsize;
  color: $subtitle_fgcolor;
  background: $subtitle_bgcolor;
  padding: 2px;
  margin: 2px;
  vertical-align: middle;
}
.titlebar, .titlebar a, .titlebar a:visited {
  background-color: $titlebar_bgcolor;
  color: $titlebar_fgcolor;
  font-size: $fsize;
  font-weight: bold;
}
.subtitle, .subtitle a, .subtitle a:visited {
  background-color: $subtitle_bgcolor;
  color: $subtitle_fgcolor;
  font-size: $fsize;
}
.tablehead, .tablehead td, .tablehead a, .tablehead a:visited	{
  color: $table_head_fgcolor;
  background-color: $table_head_bgcolor;
  font-weight: bold;
}
.private {
  vertical-align: top;
  color: $data_fgcolor;
  background-color: $data_bgcolor;
  background-image: url('"._URL_.$_ENV['imgs']['private_event']."');
  background-repeat: no-repeat;
  background-position: center;
}
.label {
  vertical-align: top;
  color: $label_fgcolor;
  background-color: $label_bgcolor;
}
.data {
  color: $data_fgcolor;
  background-color: $data_bgcolor;
}
.row1, .row1 td, .row1 a, .row1 a:visited {
  color: $row1_fgcolor;
  background-color: $row1_bgcolor;
}
.row2, .row2 td, .row2 a, .row2 a:visited {
  color: $row2_fgcolor;
  background-color: $row2_bgcolor;
}
.menu, .menu a, .menu a:visited {
  color: $menu_fgcolor;
  background-color: $menu_bgcolor;
}
.submenu, .submenu a, .submenu a:visited {
  color: $submenu_fgcolor;
  background-color: $submenu_bgcolor;
}
.error {
  color: $error_fgcolor;
  background-color: $error_bgcolor;
  font-weight: bold;
}
.required {
  color: $error_fgcolor;
  background: transparent;
  font-weight: bold;
}
.borders, .borders td {
  border: 1px solid $border_color;
}
.noborders, .noborders td {
  border: none;
}
.leftnav {
  padding: 0px;
  margin: 0px;
  border-right: 1px solid $border_color;
}
.leftnav td {
  border-top: none;
  border-bottom: 1px solid $border_color;
  border-right: none;
  border-left: none;
}  
.rightnav {
  padding: 0px;
  margin: 0px;
  border-left: 1px solid $border_color;
}
.rightnav td {
  border-top: none;
  border-bottom: 1px solid $border_color;
  border-right: none;
  border-left: none;
}
input, select, textarea {
  font-size: $fsize;
  font-family: $font_family;
  border: 1px solid $border_color;
  margin: 2px;
}
textarea {
  width: 99%;
  color: black;
  background-color: white;
}
.privateupdate {
  vertical-align: top;
  color: black;
  background-color: white;
  background-image: url("._URL_."images/private-event.png);
  background-repeat: no-repeat;
  background-position: center;
}
.footer {
  font-size: $fsize;
  color: $fgcolor;
  background-color: $bgcolor;
  font-family: $font_family;
  border-top: 1px solid $border_color;
}
form {
  display: inline;
}
.debug {
  color: $data_fgcolor;
  background-color: $data_bgcolor;
  font-size: $fsize;
  margin: 2px;
  padding: 2px;
}
.login {
  color: black;
  background: #cccccc;
  border: 1px solid $border_color;
}

