<!-- Begin reports/reports/averages.tpl --> 
{if in_array("avgclose",$smarty.post.options)
or in_array("maxclose",$smarty.post.options)}
{opentable}
{subtitle colspan=4 title="Resolution Time"}
<tr>
{if in_array("avgclose",$smarty.post.options)}
<td class="label" width="20%" align="right" valign="top">Average:</td>
<td class="data" width="30%">{$avgclose}</td>
{else}
<td colspan="2" class="label">&nbsp;</td>
{/if}
{if in_array("maxclose",$smarty.post.options)}
<td class="label" width="20%" align="right" valign="top">Maximum:</td>
<td class="data" width="30%">{$maxclose}</td>
{else}
<td colspan="2" class="label">&nbsp;</td>
{/if}
</tr>
{closetable}
<br />
{/if}
{if in_array("avgfirst",$smarty.post.options)
or in_array("maxfirst",$smarty.post.options)}
{opentable}
{subtitle colspan=4 title="First Response Time"}
<tr>
{if in_array("avgfirst",$smarty.post.options)}
<td class="label" width="20%" align="right" valign="top">Average:</td>
<td class="data" width="30%">{$avgfirst}</td>
{else}
<td colspan="2" class="label">&nbsp;</td>
{/if}
{if in_array("maxfirst",$smarty.post.options)}
<td class="label" width="20%" align="right" valign="top">Maximum:</td>
<td class="data" width="30%">{$maxfirst}</td>
{else}
<td colspan="2" class="label">&nbsp;</td>
{/if}
</tr>
{closetable}
<br />
{/if}
<!-- End reports/reports/averages.tpl -->

