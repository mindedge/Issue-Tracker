<!-- Begin issues/edit_event.tpl -->
<form method="post" action="?module=issues&action=edit&eid={$smarty.get.eid}&issueid={$smarty.get.issueid}&gid={$smarty.get.gid}">
<input type="hidden" name="commit" value="true" />
{opentable}
{titlebar title="Edit Event"}
<tr class="data"><td><textarea cols="60" rows="10" name="event">{$event|stripslashes}</textarea></td></tr>
<tr class="titlebar"><td><input type="submit" value="Update Event" /></td></tr>
{closetable}
</form>
<!-- End issues/edit_event.tpl -->

