<!-- Begin groups/status/update.tpl -->
<form method="post" action="?module=groups&action=status&update=true&gid={$smarty.get.gid}">
{opentable}
{titlebar colspan=2 title="Update Status Report"}
<tr>
<td class="label" width="20%" align="right" valign="top">Status Update:</td>
<td class="data" width="80%"><textarea rows="10" cols="60" name="info">{$smarty.post.info}</textarea></td>
</tr>
<tr>
<td class="label" width="20%" align="right" valign="top">Current Standing:</td>
<td class="data" width="80%">
<select name="stand">
<option value="0">No Activity</option>
<option value="1">Good Standing</option>
<option value="2">Fair Standing</option>
<option value="3">Critical Standing</option>
</select>
</td>
</tr>
<tr class="titlebar"><td colspan="2"><input type="submit" value="Update Status" /></td></tr>
{closetable}
</form>
<!-- End groups/status/update.tpl -->

