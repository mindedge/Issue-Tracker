<!-- Begin groups/sub_groups/remove.tpl -->
{opentable}
{titlebar colspan=2 title="Remove Sub Group"}
<tr class="label"><td colspan="2">Are you sure you want to remove this sub group?</td></tr>
<tr class="data" align="center">
<td width="50%">
<form method="post" action="?module=groups&action=edit_sub_groups&do=remove&gid={$smarty.get.gid}&child={$smarty.get.child}">
<input type="hidden" name="confirm" value="true" />
<input type="submit" value="Confirm" />
</form>
</td>
<td width="50%">
<form method="post" action="?module=groups&action=edit_sub_groups&gid={$smarty.get.gid}">
<input type="submit" value="Cancel" />
</form>
</td>
</tr>
{closetable}
<br />
<!-- End groups/sub_groups/remove.tpl -->

